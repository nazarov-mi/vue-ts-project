{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "target": "es5",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "lib",
    "strict": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "experimentalDecorators": true,
    "removeComments": true
  },
  "compileOnSave": false,
  "include": [
    "./**/*"
  ]
}